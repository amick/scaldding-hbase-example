package com.aca

import scala.io.Source
import java.util.Calendar
import java.util.Date
import java.text.SimpleDateFormat
import java.io.FileWriter

object CntlUpdate {

	def updateFile(filename:String, updateDate:Date) {
		val fw = new FileWriter(filename)

		// output date in MM/DD/YYYY HH24:MI:SS format
		val format = new SimpleDateFormat("MM/dd/yyyy HH:mm:ss")
		val dateString = format.format(updateDate)

		fw.write(dateString)
		fw.write(System.lineSeparator())
		fw.close()
		println("END control date = " + dateString)
	}

	def updateFileWithNow(filename:String) {
		this.updateFile(filename, Calendar.getInstance().getTime())
	}
}
